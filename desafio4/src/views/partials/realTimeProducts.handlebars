{{#if products.length}}
    <div class="table-responsive">
        <table class="table table-dark">
            <tr> <th class="text-center text-light">ID</th> <th class="text-center text-light">Nombre</th> <th class="text-center text-light">Precio</th> </tr>
            {{#each products}}
                <tr>
                    <td class="text-center text-light">#{{this.id}}</td>
                    <td class="text-center text-light">{{this.title}}</td>
                    <td class="text-center text-light">${{this.price}}</td>
                    <td><button class="ion-close-round text-danger bg-dark"></button></td>
                </tr>
            {{/each}}
        </table>
    </div>
    {{else}}
    <h3 class="alert alert-danger">No hay productos cargados</h1>
{{/if}}
